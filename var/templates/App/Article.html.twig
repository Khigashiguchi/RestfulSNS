{% if article %}
    <h2>/articles/{{ article.id }}</h2>
    <ul>
        <li>{{ article.title }}</li>
        <li>{{ article.description }}</li>
        <li>{{ article.status }}</li>
        <li>{{ article.created|date("Y/m/d H:i:s") }}</li>
        <li>{{ article.updated|date("Y/m/d H:i:s") }}</li>
    </ul>
{% else %}
    No Article Found
{% endif %}